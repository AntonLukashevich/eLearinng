<%= javascript_pack_tag 'type_answer.js' %>
<%= javascript_pack_tag 'answer_remove.js' %>
<%= form_with(model: @question, url: [@course, @testing, @question]) do |f| %>
  <div class="form-group">
    <%= f.label 'Question:' %>
    <%= f.text_field :question, class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.rich_text_area :content, class: 'editor' %>
  </div>
  <br>


  <fieldset>
  <%= f.fields_for :answers do |builder| %>
    <div id="add-radio-answer" >
      <%#= render 'answer', f: builder %>
    </div>
  <%end %>
  </fieldset>
  <%= link_to_add_answer('add answer', f, :answers, class:'btn btn-success' )  %>
  <br>
  <br>
  <div class="form-actions">

    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>