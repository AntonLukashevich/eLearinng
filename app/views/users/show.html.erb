<h4>Your account</h4>
<div align="right"> <%= link_to 'Edit', edit_user_path(@user) %></div>

<div class="constants">

  <div class="row">

    <div class="col-2 border">
      <div class="user-info">
        <div class="img-show-user">
          <% if @user.avatar?  %>
            <%= image_tag @user.avatar.url(:thumb)%>
          <%else %>
            <%= image_tag ("default-avatar.png") %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-9 border">
      <div class="user-info-data">
        First name: <%= @user.first_name %><br>
        Last name: <%= @user.last_name %><br>
        Email: <%= @user.email %><br>
        ID: <%= @user.id %><br>
        Role: <%= @user.role_id%>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-2 border">
      <%= link_to "Create course", new_course_path %>
    </div>
    <div class="col-9 border">
      <table>
        <%#binding.pry %>
        <% @user_courses.each do |course| %>
          <tr>
            <td>
               -- <%= course.title %> | <%= link_to 'Show', course_path(course) %> | <%= course.status %>
              <% if course.status == 'draft' %>
              | <%=link_to 'to publish', to_publish_course_path(course), method: :patch, data: { confirm: 'Are you sure?' } %>
               <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<br><br><br>




