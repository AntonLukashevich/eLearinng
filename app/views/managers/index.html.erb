<div align="left" class="row pb-5">
  <div class="col">
    <%=link_to 'Back', organization_path(@organization), class: 'btn btn-info btn-sm' %>
  </div>
</div>
<h5>Managers</h5>
<div class="row">
  <div class="col-8" style="border-right: 1px solid grey">
    <% if @managers.exists? %>
    <ul class="list-group">
      <%= render @managers %>
    </ul>
      <% else %>
      <h6 align="center"><i>No managers, add --></i></h6>
    <%end %>
  </div>
  <div class="col-4">
    <div id='new-manager'>
      <%=link_to 'Add manager ->', new_organization_manager_path(@organization), remote: true, class: 'btn btn-success btn-sm' %>
    </div>
  </div>
</div>