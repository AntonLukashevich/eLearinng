<%= form_for @course, html: { multipart: true } do |f| %>

  <div class="form-group">
    <div class="form-group">
      <%= f.label "Title:" %><br/>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "Description:" %>
      <%= f.text_area :description, rows: 7, class: 'form-control' %>

    </div>

    <div class="form-group">
      <%= f.label "Type: " %>
      <%= f.select :type_course, [['public'], ['private'], ['individual']], class: "form-select" %>
    </div>

    <div class="form-group">
      <%= f.label "Image:" %><br>
      <%= f.file_field :image %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit class: 'btn btn-success' %>
    </div>

  </div>
<% end %>