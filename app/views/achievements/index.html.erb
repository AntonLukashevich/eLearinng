<% if @achievements.present? %>
  <%#binding.pry %>
  <div class="divTable">
    <div class="divTableBody">
      <div class="divTableRow">
        <div class="divTableCell">Courses</div>
        <div class="divTableCell">Lectures</div>
        <div class="divTableCell">Tests</div>
        <div class="divTableCell">Progress</div>
        <div class="divTableCell">Unsubscribe</div>
      </div>
      <% @achievements.each do |a| %>
      <div class="divTableRow">
        <div class="divTableCell"><%=link_to a.course.title, course_path(a.course) %></div>
        <div class="divTableCell">Lectures</div>
        <div class="divTableCell">Tests</div>
        <div class="divTableCell"><%= a.progress %></div>
        <div class="divTableCell"><%= button_to 'Unsubscribe', achievement_path(a), class: "btn btn-outline-warning btn-sm",
                                                method: :delete, data: { confirm: 'Are you sure? All your achievements of course will be deleted!!! ' } %></div>
      </div>
      <% end %>
    </div>
  </div>

  <table class="table table-striped" style="margin-top: 2em;">
    <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Courses</th>
      <th scope="col">Lectures</th>
      <th scope="col">Tests</th>
      <th scope="col">Progress</th>
      <th scope="col">Unsubscribe</th>
    </tr>
    </thead>
    <tbody>
    <% @achievements.each_with_index do |a, index| %>
      <tr>
        <td> <%= index + 1 %></td>
        <td><%=link_to a.course.title, course_path(a.course) %></td>
        <% amount, full_progress = lectures_stats(a.course) %>
        <td><%= amount %>/<%= a.course.lectures.size %></td>
        <td>/<%= a.course.testings.size %></td>
        <td><%= a.progress %>/<%= full_progress %></td>

        <td><%= button_to 'Unsubscribe', achievement_path(a), class: "btn btn-outline-warning btn-sm",
                          method: :delete, data: { confirm: 'Are you sure? All your achievements of course will be deleted!!! ' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <% else %>
  <div align="center"> You don't any subscriptions</div>
<% end %>





