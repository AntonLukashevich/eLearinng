<div align="left" class="row pb-5">
  <div class="col">
    <%=link_to 'Back', room_path(@room), class: 'btn btn-info btn-sm' %>
  </div>
</div>
<h5>Room: <%= @room.name %></h5>
<h5>Users</h5>
<div class="row">
  <div class="col-8" style="border-right: 1px solid grey">
    <% if @room_users.exists? %>
      <ul class="list-group">
        <%= render @room_users %>
      </ul>
    <% else %>
      <h6 align="center"><i>No user, add --></i></h6>
    <%end %>
  </div>
  <div class="col-4">
    <div id='new-room_user'>
      <%=link_to new_room_room_user_path(@room), remote: true, class: 'btn btn-success btn-sm' do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
</div>


