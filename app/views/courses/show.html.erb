<div align="right">
  <%= link_to 'Back to Main', courses_path, class: "btn btn-outline-info btn-sm",  style: "color: black;" %>
  <% if @course.users.include? current_user %>
     <%= link_to 'Edit', edit_course_path(@course), class: "btn btn-outline-warning btn-sm", style: "color: black;" %>
  <% end %>
</div>
<div>
  <%= image_tag @course.image.url(:course), class: 'img-thumbnail img-show' if @course.image? %>
  <h1>Course: <%= @course.title %></h1>
  <div class="description">
    <%= @course.description %>
  </div>
  <div class="course-info">
    Status: <%= @course.status %><br>
    Type: <%= @course.type_course %><br>
    Authors:
    <% @course.users.each do |author| %>
      <%= author.first_name %> <%= author.last_name %>
    <% end %>
  </div>
</div>
<br>
<%# binding.pry %>
<% if @course.users.include? current_user %>
  <div align="right">
  <%= link_to 'Create new lecture of Course', new_course_lecture_path(@course), class: "btn btn-info btn-sm" %>
  </div>
<% end %>
<br>

<div data-controller="drag" data-drag-url="course_id/lectures/id/move">
  <% @course.lectures.by_position.each do |block| %>
    <div data-id="<%= block.id %>" data-course_id="<%= @course.id %>" class="card card-body mb-1 mt-1">
      <%= link_to block.title, course_lecture_path(@course, block), :locals => { id: dom_id(block), course_id: dom_id(@course)  }, class: 'lecture' %>
      <% if @course.users.include? current_user %>
        <div align="right">
        | <%= link_to 'delete', course_lecture_path(@course,block), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
      <div align="right">
        <% @readeds.each do |r| %>
          <% if r.user_id == @user.id && r.lecture_id == block.id%>
            Readed: <%= image_tag("galochka.png",:alt =>"guitars",style:'height:1vw;width:1vw;')%>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<br><br><br>

<% if @course.users.include? current_user %>
  <div align="right">
    <%= link_to 'Create new test of Course', new_course_testing_path(@course), class: "btn btn-info btn-sm" %>
  </div>
<% end %>
<% @course.testings.each do |test| %>
  <% if @course.users.include? current_user %>
  <div class="card card-body mb-1 mt-1">
  <%= link_to test.title, course_testing_path(@course, test), style: "color: black;" %>
  </div>
  <% else %>
    <div class="card card-body mb-1 mt-1">
    <%= link_to ' Pass ' + test.title, pass_testing_course_testing_path(@course, test), style: "color: black;" %>
    </div>
  <% end %>
<% end %>