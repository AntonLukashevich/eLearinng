<div align="left" class="row pb-5">
  <div class="col">
    <%=link_to 'Back', organization_path(@organization), class: 'btn btn-info btn-sm' %>
  </div>
</div>
<h5>Staff</h5>
<div class="row">
  <div class="col-8" style="border-right: 1px solid grey">
    <% if @staffs.exists? %>
      <ul class="list-group">
        <%= render @staffs %>
      </ul>
    <% else %>
      <h6 align="center"><i>No staff, add --></i></h6>
    <%end %>
  </div>
  <div class="col-4">
    <div id='new-staff'>
      <%=link_to new_organization_staff_path(@organization), remote: true, class: 'btn btn-success btn-sm' do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
</div>