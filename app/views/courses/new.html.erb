<h3>New Course</h3>

<%= form_for @course, html: {multipart: true} do |f| %>

  <div class="form-group">
    <div class="form-group">
      <%= f.label :Title %><br />
      <%= f.text_field :title,  class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>


    <div class="form-group">
      <%= f.label :type_course %>
      <%=f.select :type_course, [['public'],['private'], ['individual']] %>
    </div>


    <br>
    <div class="actions">
      <%= f.submit "create" %>
    </div>

  </div>
<% end %>


