<div align="right">
  <%= link_to 'Back to Main', courses_path %>
  | <%= link_to 'Edit', edit_course_path(@course) %>
</div>
<div>
  <%= image_tag @course.image.url(:course), class: 'img-thumbnail img-show' if @course.image? %>
  <h1>Course: <%= @course.title %></h1>
  <div class="description"> <%= @course.description %></div>
  Status: <%= @course.status %><br>
  Type: <%= @course.type_course %><br>
  Authors:
  <% @course.users.each do |author| %>
    <%= author.first_name %> <%= author.last_name %>
  <% end %>
</div>
<br>
<%# binding.pry %>
<%= link_to 'Create new lecture of Course', new_course_lecture_path(@course) %>
<br>

<div data-controller="drag" data-drag-url="course_id/lectures/id/move">
  <% @course.lectures.order(position: :asc).each do |block| %>
    <div data-id="<%= block.id %>" data-course_id="<%= @course.id %>" class="card card-body mb-1 mt-1">
      <%= link_to block.title, course_lecture_path(@course, block), :locals => { id: dom_id(block), course_id: dom_id(@course) } %>
    </div>
  <% end %>
</div>
<br><br><br>

<%= link_to 'Create new test of Course', new_course_testing_path(@course) %>
<% @course.testings.each do |test| %>
  <div class="card card-body mb-1 mt-1">
  <%= link_to test.title, course_testing_path(@course) %>
  </div>
<% end %>