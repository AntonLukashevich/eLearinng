<div align="right">
  <%=link_to 'Back', course_path(@course), class: 'btn btn-outline-info btn-sm' %>
</div>

<h2><%=@testing.title %></h2>
<%= @testing.description %>
<br><br><br>
<% if author?(@course) %>
  <%= link_to 'Add question', new_course_testing_question_path(@course,@testing), class: 'btn btn-info btn-sm'  %>
<%end %>
<br>
<div>All questions of the test:</div>
<% @testing.questions.order(created_at: :asc).each do |q| %>
  <% if author?(@course) %>
    <div class="card card-body mb-1 mt-1" >
      <%=link_to 'Answer', new_course_testing_question_response_path(@course,@testing,q)%>
      <%= link_to 'Edit', edit_course_testing_question_path(@course,@testing, q) %>
      <%= link_to 'Destroy', course_testing_question_path(@course,@testing,q), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <%else %>
    <div class="card card-body mb-1 mt-1" >
      <%= q.question %>
      <div align="right">
        <% @responses.each do |r| %>
          <% if r.user_id == @user.id && r.question_id == q.id%>
            Answered:
            <%if r.mark == 1 %>
              <%= image_tag("galochka.png",:alt =>"true",style:'height:1vw;width:1vw;')%>
            <%else %>
              <%= image_tag("red_cross.png",:alt =>"false",style:'height:1vw;width:1vw;')%>
            <%end %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<%end %>