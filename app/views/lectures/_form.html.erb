
<%= form_with(model: @lecture, url: [@course, @lecture], local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description,  class: 'form-control' %>
  </div>

  <div class="field" >
    <%= f.label 'Content:' %>
    <%= f.rich_text_area :content, class: 'editor'  %>
  </div>

  <div class="actions" style="padding-top: 1em; ">
    <%= f.submit class: 'btn btn-success' %>
  </div>

<%end %>