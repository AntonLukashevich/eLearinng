<%= form_for @course, html: { multipart: true } do |f| %>

  <div class="form-group">
    <div class="form-group">
      <%= f.label :title %><br/>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 7, class: 'form-control' %>

    </div>

    <div class="form-group">
      <%= f.label :type_course %>
      <%= f.select :type_course, [['public'], ['private'], ['individual']], class: "form-select" %>
    </div>

    <div class="form-group">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit t('.submit', action: @course.new_record? ? t('common.create') :  t('common.edit')), class: 'btn btn-success' %>
    </div>

  </div>
<% end %>