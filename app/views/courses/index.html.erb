

<% @courses.order(created_at: :asc).each do |course| %>
  <% if course.status == 'ready' %>
    <article class="course">
      <selection class="course clearfix" >
        <div>
          <%= link_to course_path(course) do %>
            <%=image_tag course.image.url(:course), class: 'img-thumbnail img-show' if course.image? %>
          <%end %>
        </div>
        <div class="course-title"> <%= link_to course.title, course_path(course), style: 'color: black;' %>
          | id: <%=course.id %>| status: <%=course.status %>
        </div>
        <div class="summary" > <%= course.description %> </div>
      </selection>
      <div align="right" >
        <div class="course">
          <%= button_to 'Show', course_path(course), class: "btn btn-outline-info btn-sm", :method => "get" %>
        </div>

        <% if (current_user == course.users) && user_signed_in? %>
        <div class="course-d">
          <%= button_to 'Destroy', course_path(course), class: "btn btn-outline-warning btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
          <%end %>
        <% if Achievement.where(:user_id => current_user, :course_id => course).exists?%>
<!--          <div class="course">-->
            <%#= link_to 'Unsubscribe', unsubscribe_course_path(course), method: :delete, data: { confirm: 'Are you sure? All your achievements of course will be deleted!!! ' }, class: "btn btn-outline-warning btn-sm" %>
<!--          </div>-->
        <% else %>
        <div class="course">
          <%= link_to 'Subscribe', subscribe_course_path(course), method: :post, class: "btn btn-outline-warning btn-sm" %>
        </div>
        <%end %>
      </div>
    </article>
  <%end %>
<% end %>
